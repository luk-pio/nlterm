{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/types",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}

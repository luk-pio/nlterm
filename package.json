{
  "name": "nlterm",
  "version": "1.0.0",
  "description": "A natural language terminal",
  "type": "module",
  "bin": "dist/index.cjs",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "npm run clean && rollup -c",
    "watch": "rollup -c -w",
    "package": "npm run build && mkdir -p bin && pkg -t node18-linux-arm64,node18-linux-x64,node18-macos-arm64,node18-macos-x64 package.json -C -o bin/nlterm --no-bytecode",
    "clean": "rm -rf dist bin",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Lukasz Piotrak",
  "license": "ISC",
  "dependencies": {
    "minimist": "^1.2.8",
    "openai": "^3.2.1",
    "pkg": "^5.8.1"
  },
  "devDependencies": {
    "axios": "^1.3.4",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.11",
    "rollup": "^3.20.2",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3"
  }
}
